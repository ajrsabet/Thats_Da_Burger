<div class="container">
  <div class="jumbotron">
    
      <span class="h1 title"><center> MMM... BURGERS! </center></span>
  
    <div class="row">
      <div class="col-4 burger-list">
        <h5 class="card-title">Burgers ready to eat!</h5>
        <div>
          {{#each burgers}}
          {{#unless eaten}}
          {{> burgers/burger-block eaten=true}}
          {{/unless}}
          {{/each}}
        </div>
      </div>

      <div class="col-4">
        <h1 class="display-4">Add a Burger</h1>
        <form class="create-form">
          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>
          <div class="form-group">
            <label for="eaten">Eaten?</label><br>
            <input type="radio" name="eaten" value="1" checked> Eaten!<br>
            <input type="radio" name="eaten" value="0"> Whole
          </div>
          <button type="submit">Add Burger</button>
        </form>
      </div>

      <div class="col-4 burger-list">
        <h5 class="card-title">Devoured Burgers!</h5>
        <ul>
          {{#each burgers}}
          {{#if eaten}}
          {{> burgers/burger-block eaten=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>